# IMPORTANT: This is an EXAMPLE template
# DO NOT commit actual secrets to git!
#
# To create the actual secret:
# 1. Copy this file: cp asaf-secret.yaml.example asaf-secret.yaml
# 2. Replace the base64 values with your actual credentials
# 3. Apply: kubectl apply -f asaf-secret.yaml
# 4. Delete the file or ensure it's in .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: asaf-secrets
  namespace: finout-tools
  labels:
    app: asaf
type: Opaque
data:
  # Base64 encoded values
  # To encode: echo -n "your-value" | base64

  # Finout credentials
  finout-client-id: eW91ci1maW5vdXQtY2xpZW50LWlk  # your-finout-client-id
  finout-secret-key: eW91ci1maW5vdXQtc2VjcmV0LWtleQ==  # your-finout-secret-key

  # Anthropic API key
  anthropic-api-key: eW91ci1hbnRocm9waWMtYXBpLWtleQ==  # your-anthropic-api-key

