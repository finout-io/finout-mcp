FROM python:3.11-slim

WORKDIR /app

# Install package in image
COPY packages/mcp-server /app/packages/mcp-server
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir /app/packages/mcp-server

ENV MCP_HOST=0.0.0.0
ENV MCP_PORT=8080
EXPOSE 8080

CMD ["finout-mcp-hosted-public"]
